<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ExplorerSectionTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">17dp</item>
        <item name="android:layout_marginTop">18dp</item>
        <item name="android:fontFamily">@font/mark_pro_bold</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_title</item>
        <item name="layout_constraintHorizontal_chainStyle">spread_inside</item>
    </style>

    <style name="ExplorerSectionExpandButtonStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">0dp</item>
        <item name="android:layout_marginHorizontal">33dp</item>
        <item name="android:textColor">@color/orange</item>
        <item name="android:textSize">@dimen/text_size_normal</item>
        <item name="android:fontFamily">@font/mark_pro_regular</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="FilterOptionTextInputLayoutStyle" parent = "@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginRight">31dp</item>
        <item name="boxCornerRadiusBottomEnd">5dp</item>
        <item name="boxCornerRadiusBottomStart">5dp</item>
        <item name="boxCornerRadiusTopEnd">5dp</item>
        <item name="boxCornerRadiusTopStart">5dp</item>
        <item name="boxStrokeColor">@color/edit_text_box_border</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
        <item name="endIconDrawable">@drawable/ic_expand</item>
        <item name="endIconTint">@color/dark_grey</item>
    </style>

    <style name="FilterOptionAutoCompleteTextViewStyle" parent = "@style/Widget.AppCompat.Light.AutoCompleteTextView">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:popupBackground">@color/white</item>
        <item name="android:dropDownSelector">@drawable/filter_spinner_dropdown_bg</item>
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/mark_pro_regular</item>
        <item name="android:inputType">none</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_big</item>
    </style>

    <style name="FilterTitleStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginHorizontal">46dp</item>
        <item name="android:fontFamily">@font/mark_pro_medium</item>
        <item name="android:textColor">@color/blue</item>
        <item name="android:textSize">@dimen/text_size_big</item>
        <item name="layout_constraintHorizontal_bias">0</item>
    </style>

    <style name="IconButtonStyle">
        <item name="android:layout_width">52dp</item>
        <item name="android:layout_height">52dp</item>
        <item name="android:insetLeft">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetRight">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="iconGravity">textStart</item>
        <item name="iconPadding">0dp</item>
    </style>
</resources>